# Staging Environment Configuration
# Simulates production-like settings for testing

# Database Configuration
POSTGRES_HOST=db
POSTGRES_DB=kodekloud_records_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_secure_password_456

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
WEB_PORT=8000

# Message Queue
RABBITMQ_HOST=rabbitmq

# Monitoring & Observability
GRAFANA_ADMIN_PASSWORD=staging_admin_secure_789
PROMETHEUS_RETENTION_TIME=30d

# OpenTelemetry
OTEL_SERVICE_NAME=kodekloud-record-store-api-staging
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_TRACES_SAMPLER=parentbased_always_on

# Prometheus Pushgateway
PROMETHEUS_PUSHGATEWAY=pushgateway:9091

# Python Path
PYTHONPATH=/app/src

# Environment Tag
ENVIRONMENT=staging
